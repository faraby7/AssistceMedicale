<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ensias.assistancemedicale"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="26" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/doctor"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.ensias.assistancemedicale.MainActivity" />
        <activity android:name="com.ensias.assistancemedicale.Inscription" />
        <activity android:name="com.ensias.assistancemedicale.InscriptionMedecin" />
        <activity
            android:name="com.ensias.assistancemedicale.HomePatient"
            android:label="@string/title_activity_home_patient"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.ensias.assistancemedicale.HomeMedecin"
            android:label="@string/title_activity_home_medecin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.ensias.assistancemedicale.Welcome"
            android:theme="@style/Theme.Design.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ensias.assistancemedicale.ProfilePatient"
            android:theme="@style/Theme.Design.Light.NoActionBar" />
        <activity android:name="com.ensias.assistancemedicale.RendezVousPatient" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.ensias.assistancemedicale.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>